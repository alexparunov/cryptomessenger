<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stego"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="alexparunov.cryptomessenger.activities.stego.StegoActivity">

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
      android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
      android:layout_marginTop="146dp" android:id="@+id/ivStegoImage" android:scaleType="centerCrop"
      android:adjustViewBounds="false"/>
  <TextView
      android:text="@string/stego_image_title"
      android:textSize="@dimen/medium_text_dim"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:layout_alignBottom="@+id/ivStegoImage"
      android:layout_centerHorizontal="true" android:layout_marginBottom="68dp"
      android:id="@+id/textView"/>
  <Button
      android:text="@string/b_stego_image_share"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:layout_below="@+id/ivStegoImage"
      android:layout_centerHorizontal="true" android:layout_marginTop="25dp"
      android:id="@+id/bStegoAct"/>
</RelativeLayout>
