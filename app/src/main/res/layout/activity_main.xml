<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alexparunov.cryptomessenger.MainActivity">

  <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:minHeight="?attr/actionBarSize"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?attr/colorPrimary"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
  </android.support.v7.widget.Toolbar>


  <Button
      android:text="@string/b_secret_text_encrypt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true" android:layout_marginTop="178dp"
      android:id="@+id/bAMEncrypt"/>

  <Button
      android:text="@string/b_secret_text_decrypt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp" android:id="@+id/bAMDecrypt"
      android:layout_below="@+id/bAMEncrypt" android:layout_alignLeft="@+id/bAMEncrypt"
      android:layout_alignStart="@+id/bAMEncrypt"/>
</RelativeLayout>
