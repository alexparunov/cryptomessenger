<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="alexparunov.stegomessenger">

  <uses-permission android:name="android.permission.CAMERA"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <!-- If SDK is >=24 we have to use FileProvider to make change -->
    <provider
        android:name="android.support.v4.content.FileProvider"
        android:authorities="alexparunov"
        android:exported="false"
        android:grantUriPermissions="true">
      <meta-data
          android:name="android.support.FILE_PROVIDER_PATHS"
          android:resource="@xml/provider_paths"/>
    </provider>

    <activity
        android:name="alexparunov.stegomessenger.MainActivity"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name="alexparunov.stegomessenger.activities_fragments.stego.StegoActivity"
        android:parentActivityName="alexparunov.stegomessenger.MainActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name="alexparunov.stegomessenger.activities_fragments.decrypt.DecryptResultActivity"
        android:parentActivityName="alexparunov.stegomessenger.MainActivity"
        android:screenOrientation="portrait">
    </activity>
  </application>

</manifest>